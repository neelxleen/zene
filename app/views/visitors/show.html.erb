<%# app/views/visitors/show.html.erb %>

<div class="container mx-auto mt-8">
  <h1 class="text-2xl font-bold mb-4">Visitor Details</h1>

  <div class="bg-white shadow rounded-lg p-6">
    <p class="mb-2">
      <strong class="font-semibold">Name:</strong>
      <%= @visitor.name %>
    </p>

    <p class="mb-2">
      <strong class="font-semibold">Occupation:</strong>
      <%= @visitor.occupation %>
    </p>

    <p class="mb-2">
      <strong class="font-semibold">National ID:</strong>
      <%= @visitor.national_id %>
    </p>

    <% if @visitor.photo.attached? %>
      <div class="mb-4">
        <strong class="font-semibold">Photo:</strong><br>
        <%= image_tag @visitor.photo, class: "max-w-xs rounded-lg shadow-md" %>
      </div>
    <% end %>
  </div>

  <%= link_to "Edit", edit_visitor_path(@visitor), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mt-4 inline-block" %>
  <%= link_to "Back", visitors_path, class: "bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded mt-4 ml-2 inline-block" %>
</div>
